<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <ul>
    <li>
      <label for="name">Name</label>
      <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>" />
    </li>
    <li>
      <label for="ingredients">Ingredients</label>
      <textarea id="ingredients" type="text" name="recipe[ingredients]"  value="<%= @recipe.ingredients %>">
      </textarea>
    </li>
    <li>
      <label for="cook_time">Cook Time</label>
      <textarea id="cook_time" type="text" name="recipe[cook_time]"  value="<%= @recipe.cook_time %>">
      </textarea>
    </li>
  </ul>
  <input type="submit" />
</form>
